{
  "name": "ai-opensubtitles-client",
  "version": "1.5.1",
  "description": "Cross-platform desktop client for AI.Opensubtitles.com",
  "main": "dist/main/main.js",
  "homepage": "./",
  "license": "MIT",
  "author": {
    "name": "AI.Opensubtitles.com",
    "email": "ai@opensubtitles.com"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p main/tsconfig.json && npm run copy:shared && NODE_ENV=development electron dist/main/main.js --no-sandbox --disable-gpu --disable-software-rasterizer --disable-gpu-sandbox",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer && npm run copy:shared",
    "build:main": "tsc -p main/tsconfig.json",
    "build:renderer": "vite build",
    "copy:shared": "cp -r shared dist/",
    "pack": "npm run generate-file-associations && electron-builder --dir",
    "dist": "npm run dist:stable",
    "dist:stable": "npm run generate-file-associations && electron-builder --linux appimage --publish never",
    "dist:dev": "npm run generate-file-associations && electron-builder --linux deb --publish never",
    "generate-file-associations": "node build-scripts/generate-file-associations.js",
    "generate-update-metadata": "node build-scripts/generate-update-metadata.js",
    "dist:all": "electron-builder --mac --win --linux --publish never",
    "dist:win": "electron-builder --win --publish never",
    "dist:mac": "electron-builder --mac --publish never",
    "dist:with-metadata": "npm run generate-file-associations && electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.opensubtitles.ai.client",
    "productName": "AI.Opensubtitles.com Client",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [],
    "extraMetadata": {
      "description": "Cross-platform desktop client for AI.Opensubtitles.com"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "iceman1010",
      "repo": "ai-opensubtitles-desktop-client"
    },
