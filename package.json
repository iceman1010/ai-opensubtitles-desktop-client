{
  "name": "ai-opensubtitles-client",
  "version": "1.0.0-beta.6",
  "description": "Cross-platform desktop client for AI.Opensubtitles.com",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": {
    "name": "AI.Opensubtitles.com",
    "email": "ai@opensubtitles.com"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p main/tsconfig.json && npm run copy:shared && NODE_ENV=development electron dist/main/main.js --no-sandbox --disable-gpu --disable-software-rasterizer --disable-gpu-sandbox",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer && npm run copy:shared",
    "build:main": "tsc -p main/tsconfig.json",
    "build:renderer": "vite build",
    "copy:shared": "cp -r shared dist/",
    "pack": "npm run generate-file-associations && electron-builder --dir",
    "dist": "npm run generate-file-associations && electron-builder --publish never",
    "generate-file-associations": "node scripts/generate-file-associations.js",
    "dist:all": "electron-builder --mac --win --linux --publish never",
    "dist:win": "electron-builder --win --publish never",
    "dist:mac": "electron-builder --mac --publish never",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.opensubtitles.ai.client",
    "productName": "AI.Opensubtitles.com Client",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "description": "Cross-platform desktop client for AI.Opensubtitles.com - Beta Version"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": null,
    "fileAssociations": [
      {
        "ext": [
          "mp4",
          "mkv",
          "avi",
          "mov",
          "wmv",
          "flv",
          "webm",
          "m4v",
          "mpg",
          "mpeg",
          "mp2",
          "mpe",
          "mpv",
          "m2v",
          "3gp",
          "3g2",
          "f4v",
          "f4p",
          "f4a",
          "f4b",
          "mxf",
          "roq",
          "nsv",
          "vob",
          "dv",
          "ts",
          "mts",
          "m2ts",
          "asf"
        ],
        "name": "Video File",
        "description": "Video file for transcription",
        "role": "Editor"
      },
      {
        "ext": [
          "mp3",
          "wav",
          "flac",
          "aac",
          "ogg",
          "wma",
          "m4a",
          "aiff",
          "au",
          "raw",
          "pcm",
          "opus",
          "vorbis",
          "ac3",
          "dts",
          "ape",
          "wv",
          "amr",
          "awb",
          "gsm",
          "spx"
        ],
        "name": "Audio File",
        "description": "Audio file for transcription",
        "role": "Editor"
      },
      {
        "ext": [
          "srt",
          "vtt"
        ],
        "name": "Subtitle File",
        "description": "Subtitle file for translation",
        "role": "Editor"
      }
    ]
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
